<div class="main">
  <div class="container">
    <h2><%= @user.nickname %></h2>
    <div class="account_info">
      <div>
        <table>
          <tr>
            <th class="">名前：</th>
            <td class=""><%= @user.nickname %></td>
          </tr>
          <tr>
            <th class="">プロフィール：</th>
            <td class=""><%= @user.profile %></td>
          </tr>
          <tr>
            <th class="">趣味：</th>
            <td class=""><%= @user.hobby %></td>
          </tr>
        </table>
      </div>
      <% if user_signed_in? && current_user.id == @user.id %>
        <div class="account">
          <%= link_to "アカウント編集", edit_user_path(@user.id), class:"account_edit btn" %>
        </div>
      <% end %>
    </div>

    <div class="center-container">
      <div class="main-container">
        <div class="center-title"><%= @user.nickname %>さんのお気に入りスポット一覧</div>
          <div class="center-posts">
            <% @posts.each do |post| %>
              <div class="center-post">
                <%= render partial: "posts/post", locals: { post: post } %>
              </div>
            <% end %>
          </div>
      </div>
    </div>
  </div>

  </div>
</div>