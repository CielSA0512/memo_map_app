<div>
  <h2>アカウント編集画面</h2>

  <%= form_with model:@user, local: true do |f| %>
    <div class="field">
      <%= f.label :nickname, "ニックネーム" %><br />
      <%= f.text_area :nickname, autofocus: true, placeholder: "(例)たなか" %>
    </div>

    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :profile, "プロフィール" %><br />
      <%= f.text_area :profile, placeholder: "(例)自己紹介文" %>
    </div>

    <div class="field">
      <%= f.label :hobby, "趣味" %><br />
      <%= f.text_area :hobby, placeholder: "(例)テニス、茶道" %>
    </div>

    <div class="actions">
      <%= f.submit "更新する" %>
    </div>
  <% end %>
</div>