<%= form_with model: @post, id:'new_post', local: true do |f| %>
<div class="new-form-post">

  <div class="error-messages"><%= render 'shared/error_messages', model: f.object %></div>
    <div class="submit-btn"><%= f.submit '▶投稿する', class:"new_spot_btn" %></div> 

    <div class="form-group">

      <div class="address-name"><%= f.label :address, 'スポットアドレス名' %></div>
      <div><%= f.text_field :address, placeholder: "(例)東京スカイツリー", autofocus: true, class: "form-address", autocomplete: "off", autofocus: true %><div>
      <div><%= f.label :comment, "コメント", class:"spot-comment" %></div>
      <div><%= f.text_area :comment, placeholder: "(例)卒業旅行のとき" , class:"form-comment" %></div>
      
      <div class="form-image-box"> 
        <div><%= f.label :image, '思い出の画像', class:"image-label" %></div>
        <div id="previews"></div>
        <div class="file-image-form"><%= f.file_field :image, class:"file-image" %></div>
      </div>

    </div>

</div>
<% end %>