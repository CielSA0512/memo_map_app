<div class="main">
  <div class="container">
    <div>作成したユーザー：<%= link_to @post.user.nickname, user_path(@user.id), class:"btn" %></div><br>
    <div>お気に入りスポット：<%= @post.address %></div><br>
    <div>コメント：<%= @post.comment %></div><br>
    <% if @post.image.present? %>
      <div>思い出写真：</div>
      <div class="item-box-img">
        <%= image_tag @post.image, class: "item-img" %>
      </div>
    <% end %>
    <div>思い出の場所：</div>
      <%= render partial: "map", locals: { post: @post }  %>
      <% if user_signed_in? && current_user.id == @post.user_id %>
        <%= link_to "編集", edit_post_path(@post.id), class:"btn" %>/
        <%= link_to "削除", post_path(@post.id), data:{ turbo_method: :delete }, class:"btn" %>
      <% end %>
    </div>
  </div>
</div>
